<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
              http://www.springframework.org/schema/context
              http://www.springframework.org/schema/context/spring-context.xsd">


    <bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="tcp://localhost:61616"/>
        <property name="trustAllPackages" value="true"/>
    </bean>

    <!-- receiver receives user messages in here -->
    <bean id="userQueue" class="org.apache.activemq.command.ActiveMQQueue">
        <constructor-arg value="com.queue.user"/>
    </bean>

    <!-- receiver sends confirmation messages in here -->
    <bean id="confirmationQueue" class="org.apache.activemq.command.ActiveMQQueue">
        <constructor-arg value="com.queue.confirmation"/>
    </bean>

    <bean id="converter" class="org.springframework.jms.support.converter.SimpleMessageConverter"/>

    <context:component-scan base-package="com.ps.jms"/>

</beans>