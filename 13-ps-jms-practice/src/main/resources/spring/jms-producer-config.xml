<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="defaultDestination" ref="userQueue"/>
    </bean>

    <bean id="converter" class="org.springframework.jms.support.converter.SimpleMessageConverter"/>

    <bean id="containerListener" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="destination" ref="confirmationQueue"/>
        <property name="messageListener" ref="confirmationReceiver"/>
    </bean>

    <bean id="confirmationReceiver" class="com.ps.jms.ConfirmationReceiver"/>
    <bean id="userSender" class="com.ps.jms.UserSender"/>

</beans>