<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL" value="tcp://localhost:61616"/>
        <property name="trustAllPackages" value="true"/>
    </bean>

    <!-- sender sends user messages in here -->
    <bean id="userQueue" class="org.apache.activemq.command.ActiveMQQueue">
        <constructor-arg value="com.queue.user"/>
    </bean>

    <!-- sender receives confirmation messages in here -->
    <bean id="confirmationQueue" class="org.apache.activemq.command.ActiveMQQueue">
        <constructor-arg value="com.queue.confirmation"/>
    </bean>

    <bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="defaultDestination" ref="userQueue"/>
    </bean>

    <bean id="converter" class="org.springframework.jms.support.converter.SimpleMessageConverter"/>

    <bean id="containerListener" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="destination" ref="confirmationQueue"/>
        <property name="messageListener" ref="confirmationReceiver"/>
    </bean>

    <bean id="confirmationReceiver" class="com.ps.jms.ConfirmationReceiver"/>
    <bean id="userSender" class="com.ps.jms.UserSender"/>

</beans>